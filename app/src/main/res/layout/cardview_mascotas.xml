<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    cardview:cardCornerRadius="@dimen/cornet_micarview">

    <LinearLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mifotocv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro_1">

        </ImageView>
    <LinearLayout
        android:id="@+id/textos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hueso1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hueso1">

        </ImageView>
     <TextView
         android:id="@+id/minombrecv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text="@string/mnombre">

     </TextView>
        <TextView
            android:id="@+id/mivotocv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="right"
            android:text="@string/mestrella">

        </TextView>
        <ImageView
            android:id="@+id/hueso2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/hueso2"
            android:onClick="llamarfavorito"
            >

        </ImageView>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>